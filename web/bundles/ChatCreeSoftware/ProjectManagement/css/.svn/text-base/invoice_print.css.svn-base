/*Reset Style*/
html * {
    margin:0;
    padding:0;
    line-height: 1.4em;
    word-spacing:1px;
    letter-spacing:0.2px;
    font-family: "Helvetica Neue", Arial, sans-serif !important;
    font: 15px/19px -apple-system-font;
    font-weight: 100;
    color: #000;
}

@page {
    margin: 10mm;    
}

@media print {
    #dialog-form, #dialog-address, .dialog {
        display: none;
    }

}

fieldset.form {
    border: none;
}
#dialog-form input {
    width: 350px;
}


.pageMargin{
    position: absolute;
    left: 8mm;
    top: 2mm;
}

.headline {
    color: #FFFFFF;
    background-color: #000000;
}

.value {
    box-sizing: border-box;
    border: 0.75pt solid black;
}

div.logo {
    position: absolute;
    left: 0cm;
    top: 0cm;
    width: 8cm;
    height: 2.3cm;    
}

div.logo img {
    width: 8cm;
    height: 2.3cm;
}

div.address {
    text-align: right;
    position: absolute;
    left: 11.4cm;
    top: 0cm;
    width: 6cm;
}

.invoiceNumber {
    text-align: center;
    position: absolute;
    left: 0cm;
    top: 4cm;
    width: 5.2cm;
    height: 0.6cm;
}
.invoiceNumberValue {
    text-align: center;
    position: absolute;
    left: 0cm;
    top: 4.59cm;
    width: 5.2cm;
    height: 0.6cm;
}

.invoicedate {
    text-align: center;
    position: absolute;
    left: 0cm;
    top: 5.65cm;
    width: 5.2cm;
    height: 0.6cm;
}
.invoicedateValue {
    text-align: center;
    position: absolute;
    left: 0cm;
    top: 6.24cm;
    width: 5.2cm;
    height: 0.6cm;
}

.customerVAT {
    text-align: center;
    position: absolute;
    left: 0cm;
    top: 7.3cm;
    width: 5.2cm;
    height: 0.6cm;
}
.customerVATValue {
    text-align: center;
    position: absolute;
    left: 0cm;
    top: 7.85cm;
    width: 5.2cm;
    height: 0.6cm;
}

.customerAddress {
    text-align: left;
    position: absolute;
    left: 9.3cm;
    top: 5.65cm;
    width: 8cm;
    height: 3cm;    
}

.customerAddress:hover {
    background-color: #EEEEEE;
}

table.items {
    position: absolute;
    left: 0cm;
    top: 10.5cm;
    width: 17.5cm;
    height: 6.6cm;    
    border-spacing: 0;   
}

table.items tbody td {
    box-sizing: border-box;
    border-right: 0.75pt solid black;    
}

table.items tbody td:first-child {
    border-left: 0.75pt solid black;    
}

table.items tbody tr:last-child td {
    border-bottom: 0.75pt solid black;    
}

table.items tfoot td:last-child {
    border-right: 0.75pt solid black;    
    border-left: 0.75pt solid black;    
    border-bottom: 0.75pt solid black;    
}

tr.itemRow {
    height: 0.6cm;
}

tr.itemRow > td {
    padding-bottom: 0.2cm;
}

.itemsDate {
    text-align: center;
    width: 21mm;
}

.itemsDesc {
    padding-left: 1mm;
    text-align: left;
    width: 91mm;
}

td.itemsDesc:hover {
    background-color: #EEEEEE;
}


.itemsUnitPrice {
    padding-right: 1mm;
    text-align: right;
    width: 21mm;
}

.itemsQuantity {
    padding-right: 1mm;
    text-align: right;    
    width: 21mm;
}

.itemsAmount {
    padding-right: 1mm;
    text-align: right;    
    width: 21mm;
}

table.specialConditions {
    position: absolute;
    left: 0cm;
    top: 18.3cm;
    width: 17.5cm;
    height: 1.2cm;    
    border-spacing: 0;       
}

table.specialConditions tbody td:first-child {
    border-left: 0.75pt solid black;    
    border-right: 0.75pt solid black;    
    border-bottom: 0.75pt solid black;    
}

table.specialConditions tbody td {
    border-right: 0.75pt solid black;    
    border-bottom: 0.75pt solid black;    
}

table.specialConditions tbody td.noborder {
    border: 0px;
}

.conditionAmount {
    text-align: center;    
    width: 25mm;
}

.conditionText {
    text-align: center;    
    width: 11.6cm;
}

.conditionDue {
    text-align: center;    
    width: 34mm;
}

table.conditionsHead {
    position: absolute;
    left: 0cm;
    top: 21.3cm;
    width: 17.5cm;
    height: 2cm;    
    border-spacing: 0;       
    
}

table.conditionsHead thead td {
    border-bottom: 0.75pt solid black;
}

div.pageFooter {
    position: absolute;
    left: 0cm;
    top: 24.5cm;
    width: 17.5cm;
    height: 1.2cm;    
    
}

a.addressSelection {
    text-decoration: none;
}

tr.hover{
    background-color: #999999;
}

tr.odd {
    border-top: 1px solid #CCC;
    background-color: #AAA;
    border-bottom: 1px solid #777;
}

tr.even {
    border-top: 1px solid #EEE;    
    background-color: #DDD;
    border-bottom: 1px solid #999;    
}

div.ui-dialog-titlebar {
    background: #4D4D4D;
    border: 0px;
}
span.ui-dialog-title {
    color: #FFFFFF;    
}

div.ui-widget-header {
    border: 0px;
}

td.top {
    vertical-align: top;
}